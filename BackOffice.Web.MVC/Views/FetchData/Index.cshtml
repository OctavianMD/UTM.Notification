@model FetchDataModel
<div class="container">
    <div class="row">
        <div class="col-sm-3"></div>
        
        <div class="col-sm-6">
            <div class="btn-group">
                <form asp-controller="FetchData" asp-action="FetchSenders">
                    <button class="btn btn-primary m-2" type="submit">Fetch Senders</button>
                </form>
                
                <form asp-controller="FetchData" asp-action="FetchReceivers">
                    <button class="btn btn-primary m-2" type="submit">Fetch Receivers</button>
                </form>
            </div>
        </div>
    </div>

    @if (Model.IsFetched) 
    { 
        <div class="row">
            <p class="alert alert-success w-100">@Model.Message</p>
        </div>
    }
</div>