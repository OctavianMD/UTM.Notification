@model CommonLayer.ViewModels.SenderViewModel
@{
    ViewData["Title"] = "Edit Sender";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <form method="post" asp-action="Edit">
                @Html.HiddenFor(x=>x.Id)
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" class="form-control" value="@Model.Name">
                </div>
                <div class="form-group">
                    <label asp-for="Service"></label>
                    <input asp-for="Service" type="text" class="form-control" value="@Model.Service">
                </div>
                <div class="form-group">
                    <label asp-for="Channels"></label>
                    <select asp-for="Channels" class="form-control">
                        <option value="1">Email</option>
                        <option value="2">Sms</option>
                        @*<option value="3">Sms, Email</option>*@
                        <option value="4">Telegram</option>
                        @*<option value="5">Telegram, Email</option>
                            <option value="6">Telegram, Sms</option>
                            <option value="7">Telegram, Sms, Email</option>*@
                        @* Todo find solution for multiple selection *@
                    </select>
                </div>
                <button class="btn btn-success" type="submit">Update</button>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script>

        window.addEventListener('DOMContentLoaded', () => {
            const select = document.getElementById('Channels');
            const optionValue = @((int)(Model.Channels));
            console.log('Value', optionValue);
            select.value = optionValue;
        });

    </script>
}
